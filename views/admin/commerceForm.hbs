<h2>{{#if commerce.id}}Editar Comercio{{else}}Nuevo Comercio{{/if}}</h2>
<form action="{{#if commerce.id}}/admin/commerce/edit/{{commerce.id}}{{else}}/admin/commerce/new{{/if}}" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Nombre</label>
    <input type="text" class="form-control" id="name" name="name" value="{{commerce.name}}" required>
  </div>
  <div class="form-group">
    <label for="phone">Teléfono</label>
    <input type="text" class="form-control" id="phone" name="phone" value="{{commerce.phone}}" required>
  </div>
  <div class="form-group">
    <label for="email">Correo</label>
    <input type="email" class="form-control" id="email" name="email" value="{{commerce.email}}" required>
  </div>
  <div class="form-group">
    <label for="openHour">Hora de Apertura</label>
    <input type="text" class="form-control" id="openHour" name="openHour" value="{{commerce.openHour}}" required>
  </div>
  <div class="form-group">
    <label for="closeHour">Hora de Cierre</label>
    <input type="text" class="form-control" id="closeHour" name="closeHour" value="{{commerce.closeHour}}" required>
  </div>
  <div class="form-group">
    <label for="logo">Logo</label>
    <input type="file" class="form-control-file" id="logo" name="logo">
    {{#if commerce.logo}}
      <img src="/Uploads/{{commerce.logo}}" alt="{{commerce.name}}" style="width: 50px; height: 50px; object-fit: cover;">
    {{/if}}
  </div>
  {{#if commerce.id}}
    <div class="form-group">
      <label for="username">Nombre de Usuario</label>
      <input type="text" class="form-control" id="username" name="username" value="{{commerce.username}}" required>
    </div>
  {{else}}
    <div class="form-group">
      <label for="username">Nombre de Usuario</label>
      <input type="text" class="form-control" id="username" name="username" value="{{commerce.username}}" required>
    </div>
    <div class="form-group">
      <label for="password">Contraseña</label>
      <input type="password" class="form-control" id="password" name="password" required>
    </div>
    <div class="form-group">
      <label for="confirmPassword">Confirmar Contraseña</label>
      <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
    </div>
  {{/if}}
  {{#each errors}}
    <div class="alert alert-danger">{{this.msg}}</div>
  {{/each}}
  <button type="submit" class="btn btn-primary">Guardar</button>
</form>