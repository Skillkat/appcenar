<div class="container">
  <h2>Detalles del Pedido #{{order.id}}</h2>
  <p>Comercio: {{order.Commerce.name}}</p>
  <p>Estado: {{order.status}}</p>
  <p>Direcci√≥n: {{order.Address.name}} - {{order.Address.description}}</p>
  <p>Subtotal: RD$ {{order.subtotal}}</p>
  <p>ITBIS (18%): RD$ {{order.itbisAmount}}</p>
  <p>Total: RD$ {{order.total}}</p>
  <h3>Productos</h3>
  {{#if order.OrderProducts}}
    <ul>
      {{#each order.OrderProducts}}
        <li>{{this.Product.name}} (Cantidad: {{this.quantity}}, Precio: RD$ {{this.price}})</li>
      {{/each}}
    </ul>
  {{else}}
    <p>No hay productos en este pedido.</p>
  {{/if}}
  {{#if_eq order.status 'pending'}}
    <form action="/delivery/order/{{order.id}}/accept" method="POST">
      <button type="submit" class="btn btn-primary">Aceptar Pedido</button>
    </form>
  {{/if_eq}}
  {{#if_eq order.status 'in_process'}}
    <form action="/delivery/order/{{order.id}}/complete" method="POST">
      <button type="submit" class="btn btn-success">Completar Pedido</button>
    </form>
  {{/if_eq}}
  <a href="/delivery/home" class="btn btn-secondary">Volver</a>
</div>