<h2>Mis Favoritos</h2>
<div class="row">
  {{#each favorites}}
    <div class="col-md-4 mb-3">
      <div class="card">
        {{#if this.Commerce.logo}}
          <img src="/uploads/{{this.Commerce.logo}}" class="card-img-top" alt="{{this.Commerce.name}}" style="height: 100px; object-fit: cover;">
        {{/if}}
        <div class="card-body">
          <h5 class="card-title">{{this.Commerce.name}}</h5>
          <form action="/client/unfavorite/{{this.commerceId}}" method="POST">
            <button type="submit" class="btn btn-outline-danger">Quitar de Favoritos</button>
          </form>
          <a href="/client/catalog/{{this.commerceId}}" class="btn btn-primary">Ver Cat√°logo</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>