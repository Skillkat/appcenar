<div class="container">
     <h2>Mis Favoritos</h2>
     {{#if favorites}}
       <div class="row">
         {{#each favorites}}
           <div class="col-md-6 mb-3">
             <div class="card">
               <img src="/uploads/{{this.Commerce.logo}}" class="card-img-top" alt="{{this.Commerce.name}}" onerror="this.src='/images/default.jpg'">
               <div class="card-body">
                 <h5 class="card-title">{{this.Commerce.name}}</h5>
                 <p class="card-text">Horario: {{this.Commerce.openHour}} - {{this.Commerce.closeHour}}</p>
                 <a href="/client/catalog/{{this.commerceId}}" class="btn btn-primary">Ver Cat√°logo</a>
                 <form action="/client/unfavorite/{{this.commerceId}}" method="POST" class="d-inline">
                   <button type="submit" class="btn btn-danger">Quitar Favorito</button>
                 </form>
               </div>
             </div>
           </div>
         {{/each}}
       </div>
     {{else}}
       <p>No tienes comercios favoritos.</p>
     {{/if}}
   </div>