<div class="container">
  <h2>Mis Pedidos</h2>
  {{#if orders}}
    <div class="row">
      {{#each orders}}
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Pedido #{{this.id}}</h5>
              <p class="card-text">Comercio: {{this.Commerce.name}}</p>
              <p class="card-text">Estado: {{this.status}}</p>
              <p class="card-text">Total: RD$ {{this.total}}</p>
              <p class="card-text">Fecha: {{this.createdAt}}</p>
              <a href="/client/order/{{this.id}}" class="btn btn-primary">Ver Detalles</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p>No tienes pedidos.</p>
  {{/if}}
</div>